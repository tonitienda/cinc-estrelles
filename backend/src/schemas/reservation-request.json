{
  "type": "object",
  "title": "Reservation Request",
  "description": "Data to be provided to create a reservation",
  "additionalProperties": false,
  "required": [
    "customerEmail",
    "customerName",
    "checkin",
    "checkout",
    "numAdults",
    "numChildren",
    "roomType",
    "source"
  ],
  "properties": {
    "customerName": {
      "type": "string",
      "minLength": 1
    },
    "customerEmail": {
      "type": "string",
      "format": "email"
    },
    "checkin": {
      "type": "string",
      "format": "date"
    },
    "checkout": {
      "type": "string",
      "format": "date"
    },
    "numAdults": {
      "type": "integer",
      "minimum": 0
    },
    "numChildren": {
      "type": "integer"
    },
    "roomType": {
      "type": "string",
      "minLength": 1
    },
    "specialRequests": {
      "type": "string"
    },
    "source": {
      "type": "object",
      "required": ["origin", "reservationId"],
      "properties": {
        "origin": {
          "type": "string",
          "minLength": 1
        },
        "reservationId": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
